pipeline {
    agent any

    tools {
        nodejs 'NodeJS'
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/22sakshiagarwal/smart-automation-playwright-ml.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }

        stage('Install Playwright Browsers') {
            steps {
                bat 'npx playwright install'
            }
        }

        stage('Run Full Test Suite') {
            steps {
                bat 'npx playwright test --reporter=json,html'
                bat 'npx playwright show-report'   // ðŸ”¥ FIX 1: Ensure full HTML report is generated
            }
            post {
                always {
                    archiveArtifacts artifacts: 'playwright-report/**', allowEmptyArchive: true
                }
            }
        }

        stage('Update Test History (Python ML)') {
            steps {
                bat 'python scripts\\update-test-history.py'   // assumes Python is in PATH
            }
        }

        stage('Run ML Prioritizer') {
            steps {
                bat 'python ml\\prioritizer.py'
                archiveArtifacts artifacts: 'ml\\results\\prioritized_tests.csv', allowEmptyArchive: true
            }
        }

        stage('Run Prioritized Tests') {
            steps {
                bat 'node scripts\\run-prioritized-tests.js'
                // You may add a reporter here too if you want results stored
            }
        }
    }

    post {
        always {
            echo "Pipeline completed!"
        }
    }
}
