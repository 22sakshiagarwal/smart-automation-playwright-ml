pipeline {
    agent any

    tools {
        nodejs 'NodeJS'
    }

    stages {

        stage('Checkout Code') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/22sakshiagarwal/smart-automation-playwright-ml.git',
                        credentialsId: 'jenkins-token'
                    ]]
                ])
            }
        }

        stage('Prepare Folders') {
            steps {
                bat 'if not exist test-results mkdir test-results'
                bat 'if not exist playwright-report mkdir playwright-report'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }

        stage('Install Playwright Browsers') {
            steps {
                bat 'npx playwright install'
            }
        }

        stage('Run Full Test Suite (HTML + JSON)') {
            steps {
                // Use reporters defined in playwright.config.js so behavior is identical
                // locally and in Jenkins. That config already writes test-results/report.json
                // and the HTML report under playwright-report.
                bat 'npx playwright test'
            }
            post {
                always {
                    archiveArtifacts artifacts: 'playwright-report/**', allowEmptyArchive: true
                    archiveArtifacts artifacts: 'test-results/report.json', allowEmptyArchive: true
                }
            }
        }

        stage('Update Test History (Python)') {
            steps {
                bat 'python scripts\\update-test-history.py'
            }
            post {
                always {
                    archiveArtifacts artifacts: 'ml\\test_history.csv', allowEmptyArchive: true
                }
            }
        }

        stage('Run ML Prioritizer') {
            steps {
                bat 'python ml\\prioritizer.py'
            }
            post {
                always {
                    archiveArtifacts artifacts: 'ml\\results\\prioritized_tests.csv', allowEmptyArchive: false
                }
            }
        }

        stage('Run Prioritized Tests') {
            steps {
                bat 'node scripts\\run-prioritized-tests.js'
            }
        }
    }

    post {
        always {
            echo "Pipeline execution completed!"
        }
    }
}
